<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:teams="clr-namespace:ViewModels.Modules.Teams;assembly=ViewModels"
             xmlns:controls="clr-namespace:PatiTournApp.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="teams:TeamsViewModel"
             x:CompileBindings="True"
             x:Class="PatiTournApp.Modules.Teams.TeamsView">
    <Grid RowDefinitions="Auto *">
        <controls:ItemActionControl Grid.Row="0" />
        <ListBox Grid.Row="1" 
                 Items="{Binding ProxyItems}"
                 SelectedItem="{Binding SelectedProxy}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="teams:TeamProxy" x:CompileBindings="True">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" />
                        <TextBlock Text="{Binding Description}" FontStyle="Italic" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>